---
layout: layouts/base.njk
---
<h1>{{ title }}</h1>
<time class="text-sm text-gray-400" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>



{{ content | safe }}



<hr />
<div class=" flex-none">
  {%- for tag in tags | filterTagList -%}
    {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
    <a href="{{ tagUrl | url }}" class=" mx-2 text-sm bg-gray-100 px-1 rounded-sm">{{ tag }}</a>
  {%- endfor %}
</div>

{%- if collections.projects %}
  {%- set nextPost = collections.projects | getNextCollectionItem(page) | isDraft %}
  {%- set previousPost = collections.projects | getPreviousCollectionItem(page) | isDraft %}
  {%- if nextPost or previousPost %}

    <ul class="flex flex-row flex-1 list-none">
      {%- if nextPost %}<li class=" justify-start">بعدی: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li>{% endif %}
      {%- if previousPost %}<li class=" justify-end">قبلی: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>{% endif %}
    </ul>
  {%- endif %}
{%- endif %}
